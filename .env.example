# RestoreDoc Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-anon-key
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-service-key

# Flask Configuration
FLASK_ENV=development  # or 'production'
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-for-sessions-generate-a-random-string

# Google Gemini (Alternative to OpenAI)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Email Service Configuration (Optional)
# Option 1: Resend
RESEND_API_KEY=re_your_resend_api_key

# Option 2: SendGrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Option 3: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Company Information (for PDF generation)
COMPANY_NAME=Major Restoration Services
COMPANY_ADDRESS=100 Main Street
COMPANY_CITY=York
COMPANY_STATE=PA
COMPANY_ZIP=17401
COMPANY_PHONE=(717) 555-0100
COMPANY_EMAIL=info@majorrestoration.com
COMPANY_LICENSE=RES2024PA

# Regional Pricing Configuration (per sq ft)
# Water Damage
WATER_CAT1_MIN=3.00
WATER_CAT1_MAX=4.00
WATER_CAT2_MIN=4.50
WATER_CAT2_MAX=5.50
WATER_CAT3_MIN=7.00
WATER_CAT3_MAX=9.00

# Fire Damage
FIRE_LIGHT_MIN=3.00
FIRE_LIGHT_MAX=5.00
FIRE_HEAVY_MIN=6.00
FIRE_HEAVY_MAX=10.00
FIRE_STRUCTURAL_MIN=25.00
FIRE_STRUCTURAL_MAX=50.00

# Mold Remediation
MOLD_LEVEL1_MIN=500
MOLD_LEVEL1_MAX=1500
MOLD_LEVEL2_MIN=1500
MOLD_LEVEL2_MAX=3000
MOLD_LEVEL3_MIN=3000
MOLD_LEVEL3_MAX=8000
MOLD_LEVEL4_MIN=8000

# Default Labor and Equipment Rates
DEFAULT_LABOR_RATE=125
DEFAULT_EQUIPMENT_DAYS=3
DEFAULT_MARKUP_PERCENT=10

# File Upload Settings
MAX_FILE_SIZE=20971520  # 20MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=*  # Set to specific domains in production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=restoredoc.log

# Database (Optional - if using local SQLite instead of Supabase)
DATABASE_URL=sqlite:///restoredoc.db

# Redis Cache (Optional - for production)
REDIS_URL=redis://localhost:6379/0

# Feature Flags
ENABLE_MOCK_ANALYSIS=true  # Use mock responses when OpenAI is not configured
ENABLE_PDF_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SUPABASE_STORAGE=true